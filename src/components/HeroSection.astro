---

import Image from "astro/components/Image.astro"

const { settings, title, content } = Astro.props

---

<section class="bs-container py-6 flex flex-col lg:flex-row items-center">

  <!-- Content -->
  <div class="flex flex-col gap-6 lg:max-w-lg w-full py-16">

    <!-- Title -->
    <h1 class="bs-h1" set:html={ title } />

    <!-- Content -->
    <div class="bs-body-text xl:text-xl flex flex-col gap-4 [&_p]:last:text-bs-foreground-dark" set:html={ content } />



  </div>


</section>
